<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.BakeryShop" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Màu chính -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Màu phụ -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Màu nền -->
        <item name="colorSurface">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorTextPrimary</item>

        <!-- Status & Navigation bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

        <!-- Tắt ripple mặc định (xám) -->
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="Theme.BakeryShop" parent="Base.Theme.BakeryShop" />
</resources>
