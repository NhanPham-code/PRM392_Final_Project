<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- SearchView -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:queryHint="Tìm kiếm sản phẩm..."
        android:iconifiedByDefault="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollViewCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/linearLayoutCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- Ví dụ danh mục -->
            <TextView
                android:id="@+id/breadCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bread"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/cakeSliceCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cake Slice"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/savoryCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Savory"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/specialCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/sweetCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sweet"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginEnd="8dp" />

            <!-- Thêm các TextView hoặc Button khác tương tự -->

        </LinearLayout>
    </HorizontalScrollView>



    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProducts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        tools:listitem="@layout/item_product"
        app:layout_constraintTop_toBottomOf="@id/horizontalScrollViewCategories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
