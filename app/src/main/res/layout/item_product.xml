<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"          android:layout_height="wrap_content"
    android:layout_margin="8dp"                 card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/ProductSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"> <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"> <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bunny"
        android:contentDescription="Product Image"/> <ImageView
        android:id="@+id/imgFavorite"
        android:layout_width="32dp" android:layout_height="32dp"
        android:layout_margin="8dp"
        android:layout_gravity="top|end"
        android:src="@drawable/ic_favorite_outline"
        android:contentDescription="Add to Favorites"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp" /> </FrameLayout>

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bánh Mì"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@android:color/black"/> <TextView
            android:id="@+id/txtProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20.000₫"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>